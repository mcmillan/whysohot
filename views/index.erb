    <div class="container" ng-controller="ReadingCtrl">
      <p>Inside, it's currently</p>
      <div class="currently">
        {{readings[0].f35_temperature}}&deg;C
      </div>
      <p class="outside">Outside, it's <strong>{{readings[0].outside_temperature}}&deg;C</strong>.</p>
